<div class="form-group col-4 mx-auto mt-3 mb-0 w-50 border p-5 bg-warning bg-gradient text-dark">
    <form class="form" onsubmit="return addMessage(this)">
        <fieldset>
            <h4 class="d-block mx-auto mb-2 text-center">WebSocket Chat</h4>
            <label for="author">Author</label><br>
            <div class="input-group">
                <div class="input-group-text">@</div>
                <input class="form-control" type="email" name="author" id="author"
                    placeholder="Enter your em@il address"></input><br>
            </div>
            <br>
            <label for="texto">Message</label><br>
            <div class="input-group mb-3">
                <input class="form-control" type="text" name="texto" id="texto" placeholder="Put something nice here"></input>
                <button class="btn btn-primary ms-3 text-nowrap" name="botonMensaje" id="botonMensaje">Send <i
                        class="fa fa-paper-plane"></i></button>
            </div>
        </fieldset>
    </form>
</div>